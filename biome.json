{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!build",
      "!dist",
      "!.next",
      "!.vercel",
      "!*.lock"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "attributePosition": "multiline",
      "expand": "always",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "expand": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": {
          "level": "error",
          "options": {
            "style": "separatedType"
          }
        }
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "natural",
            "groups": [
              {
                "type": true
              },
              ":BLANK_LINE:",
              [
                "react",
                "next",
                "next/**"
              ],
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/components/**",
              "@/library/**",
              "@/hooks/**",
              ":BLANK_LINE:",
              ":ALIAS:"
            ]
          }
        }
      }
    }
  }
}
